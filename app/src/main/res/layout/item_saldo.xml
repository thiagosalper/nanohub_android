<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/verde_escuro"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtqtde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btshare"
        android:layout_toStartOf="@+id/btshare"
        android:fontFamily="@font/rubik"
        android:textColor="@color/branco"
        android:textStyle="bold"
        android:text="0.00000"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/btremove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_remove" />

    <TextView
        android:id="@+id/txtdescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtqtde"
        android:fontFamily="@font/rubik"
        android:text="description"
        android:textColor="@color/cinza1" />

    <TextView
        android:id="@+id/txtdolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/btremove"
        android:layout_toStartOf="@+id/btremove"
        android:fontFamily="@font/rubik"
        android:text="USD 00.00"
        android:textAlignment="textEnd"
        android:textColor="@color/branco"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtbtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtdescricao"
        android:fontFamily="@font/rubik"
        android:text="0.00000"
        android:textColor="@color/branco"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>